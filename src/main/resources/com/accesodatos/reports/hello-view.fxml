<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="478.0" prefWidth="543.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accesodatos.reports.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="GENERADOR DE INFORMES">
        <font>
            <Font size="22.0" />
        </font>
    </Label>
    <Label text="Selecciona el tipo de informe que quieres generar" />
    <ComboBox fx:id="comboReportes" onAction="#manejarSeleccionReporte" prefWidth="150.0" />

    <Button onAction="#generarReporte" text="Generar Informe" />

    <!-- VBox para los parámetros -->
    <VBox fx:id="parametrosBox" spacing="10" visible="false">
        <Label fx:id="labelParametros" text="Este reporte requiere parámetros" />
        <Label text="ID usuario" />
        <TextField fx:id="idUsuarioField" />
        <Label text="Fecha Inicio" />
        <DatePicker fx:id="fechaInicioPicker" />
        <Label text="Fecha Fin" />
        <DatePicker fx:id="fechaFinPicker" />
    </VBox>
</VBox>
